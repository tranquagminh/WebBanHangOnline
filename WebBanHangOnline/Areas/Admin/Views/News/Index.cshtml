@model IEnumerable<WebBanHangOnline.Models.EF.News>
@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/News" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý tin tức</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/News/Add" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <th>STT</th>
                    <th>Hình ảnh</th>
                    <th>Tiêu đề</th>
                    <th>Ngày tạo</th>
                    <th>Hiển thị</th>
                    <th>Thứ tự</th>
                    <th></th>
                </tr>
                @if (Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                    {
                        var strCheck = item.IsActive ? " <i class=\"fa fa-check text-success\"></i>" : " <i class=\"fa fa-times text-danger\"></i>";
                        <tr id="trow_@item.Id">
                            <td>@i</td>
                            <td><img src="@item.Image" width="50"/></td>
                            <td>@item.Title</td>
                            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                               <a href='#' data-id="@item.Id"class="btnActive" > @Html.Raw(strCheck)</a>
                            </td>
                            <td>
                                <a href="/admin/News/edit/@item.Id" class="btn btn-success">Sửa</a>
                                <a href="#" data-id="@item.Id" class="btn btn-danger Btn-Delete">Xóa</a>
                            </td>
                        </tr>
                        i++;
                    }

                }
                else
                {
                    <tr>
                        <td colspan="4">Không có bản ghi nào!!!</td>
                    </tr>
                }

            </table>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts{
    <script>
        $(document).ready(function () {
            // Click on Btn-Delete
            var a = document.querySelectorAll('.Btn-Delete')
            for (i of a) {
                var id = i.dataset.id

                i.onclick = function () {
                    var conf = confirm('Bạn có muốn xóa danh mục này không?');
                    if ( conf === true) {
                        $.ajax({
                            url: '/admin/News/Delete',
                            type: 'POST',
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success) {
                                    $('#trow_' + id).remove();
                                }
                            }
                        });

                    }
                }

            }

            // Click on btnActive
            var a = document.querySelectorAll('.btnActive')
            for (i of a) {
                var id = i.dataset.id

                i.onclick = function (e) {
                    e.preventDefault();
                    /*var conf = confirm('Bạn có muốn đổi trạng thái tin tức này không?');*/
                    $.ajax({
                        url: '/admin/News/IsActive',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                if (rs.isActive) {
                                    i.innerHTML = "<i class='fa fa-check text-success'></i>";
                                }
                                else {
                                    i.innerHTML = "<i class='fa fa-times text-danger'></i>";
                                }
                            }
                            
                        }
                    });
                }

            }
        })

    </script>
}

